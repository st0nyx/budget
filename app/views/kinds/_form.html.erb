<%= simple_form_for(@kind) do |form| %>
  <%= form.error_notification %>
  <%= form.error_notification message: form.object.errors[:base].to_sentence if form.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= form.input :name %>
  </div>

  <%= render partial: 'periodic', locals: {form: form } %>

  <div class="form-actions">
    <%= form.button :submit, "Save", class: 'btn btn-outline-primary btn-block' %>
  </div>
<% end %>
