<div class="container">
  <div class="row">
    <div class="col-lg-12 col-md-6 ml-auto mr-auto">

      <h1>Kinds Of Expenses</h1>

      <%= link_to 'New Kind', new_kind_path, class: 'btn btn-outline-primary' %>

      <table class="table table-striped table-hover">
        <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th></th>
          <th>Periodic</th>
          <th colspan="3"></th>
        </tr>
        </thead>
        <tbody id="kinds">
        <%= render @kinds %>
        </tbody>
      </table>
    </div>
  </div>
</div>




