<%= simple_form_for(@expense) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :date %>
    <%= f.input :amount_cents %>
    <%= f.input :description %>
    <%= f.association :kind, as: :radio_buttons, wrapper: :horizontal_collection_inline %>
    <%= f.association :store, as: :radio_buttons, wrapper: :horizontal_collection_inline %>
  </div>

  <%= render partial: 'expensetype', locals: {f: f } %>

  <div class="form-actions">
    <%= f.button :submit, "Save", class: 'btn btn-outline-primary btn-block' %>
  </div>
<% end %>
