<div class="container">
  <div class="row">
    <div class="col-lg-12 col-md-6 ml-auto mr-auto">

      <h1>Expenses</h1>
      <%= link_to 'New Expense', new_expense_path, class: 'btn btn-outline-primary' %>

      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Date</th>
            <th>Amount</th>
            <th>Description</th>
            <th>Type</th>
            <th>Kind</th>
            <th>Store</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody id="expenses">

        <%= render @expenses %>
        </tbody>
      </table>

    </div>
  </div>
</div>



