<div class="container">
  <div class="row">
    <div class="col">

      <h1>Expenses</h1>
      <h5>Current & Previous Month Spent</h5>
      <table class="table table-striped table-hover">
        <% Expense.group_by_month(:date, last: 3, reverse: true, format: "%Y, %B").sum(:amount).each do |key, value| %>
          <tr>
            <td><%= key %></td>
            <td><%= value %></td>
          </tr>
        <% end %>
      </table>
      <hr>

      <%= link_to 'New Expense', new_expense_path, class: 'btn btn-outline-primary' %>

      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Date</th>
            <th>Amount</th>
            <th>Description</th>
            <th>Type</th>
            <th>Kind</th>
            <th>Store</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody id="expenses">

        <%= render @expenses %>
        </tbody>
      </table>

    </div>
  </div>
</div>