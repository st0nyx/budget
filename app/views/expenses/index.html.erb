  <div class="row">
    <div class="col-lg-12 col-md-6 ml-auto mr-auto">

<table class="table table-striped table-hover">

  <h3> Today </h3>
  <th>Date</th>
  <th>Amount</th>

  <% @grouped_expenses.each do |key, value| %>
    <tr>
      <td><%= key %></td></td>
      <td><%= value %></td>
    </tr>
  <% end %>
  <br />
</table>
    </div>
  </div>
</div>


